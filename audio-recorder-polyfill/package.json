{
  "name": "audio-recorder-polyfill",
  "version": "0.1.3",
  "description": "MediaRecorder polyfill to record audio in Edge and Safari",
  "keywords": [
    "mediarecorder",
    "polyfill",
    "edge",
    "safari",
    "wave",
    "wav",
    "webrtc",
    "audio",
    "web audio api",
    "recorder"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/audio-recorder-polyfill",
  "devDependencies": {
    "bytes": "^3.0.0",
    "clean-publish": "^1.0.10",
    "copy-webpack-plugin": "^4.5.2",
    "docdash": "^1.0.0",
    "eslint": "^5.6.1",
    "eslint-config-logux": "^25.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.24.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "html-webpack-inline-source-plugin": "^0.0.10",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.3.0",
    "nanodelay": "^0.1.4",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "size-limit": "^0.20.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "yaspeller-ci": "^1.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spell": "yarn api && yaspeller-ci *.md api/*.html",
    "clean": "rimraf api/ coverage/ test/demo/build/",
    "lint": "eslint *.js test/{**/,}*.js",
    "api": "jsdoc --configure .jsdocrc *.js",
    "unit": "jest --coverage",
    "test": "yarn unit && yarn lint && size-limit && yarn spell && yarn build",
    "start": "webpack-dev-server --config test/demo/webpack.config",
    "build": "webpack --mode production --config test/demo/webpack.config"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "1072 B"
    }
  ],
  "eslintConfig": {
    "extends": "eslint-config-logux/browser",
    "globals": {
      "onmessage": true
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "excludeFiles": [
      "api/*.js.html"
    ],
    "dictionary": [
      "JSDoc",
      "docdash",
      "MediaRecorder",
      "Versioning",
      "polyfill",
      "js",
      "isTypeSupported",
      "mimeType",
      "MediaStream",
      "dataavailable",
      "addEventListener",
      "dispatchEvent",
      "removeEventListener",
      "timeslice",
      "notSupported",
      "requestData",
      "KB",
      "gzipped",
      "webpack",
      "Chua",
      "polyfillâ€™s",
      "polyfilled"
    ]
  }
}
